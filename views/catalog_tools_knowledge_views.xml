<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reclutamiento_kuale_tools_knowledge_tree_view" model="ir.ui.view">
            <field name="name">reclutamiento__kuale.tools_knowledge.view.tree</field>
            <field name="model">reclutamiento__kuale.tools_knowledge</field>
            <field name="arch" type="xml">
                <tree string="Tool and knowledge">
                    <field name="active" column_invisible="True" />
                    <field name="name" />
                    <field name="type" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        <record id="reclutamiento_kuale_tools_knowledge_form_view" model="ir.ui.view">
            <field name="name">reclutamiento__kuale.tools_knowledge.view.form</field>
            <field name="model">reclutamiento__kuale.tools_knowledge</field>
            <field name="arch" type="xml">
                <form string="Tool and knowledge">
                    <sheet>
                        <group>
                            <group>
                                <field name="active" invisible="1" />
                                <field name="name" />
                            </group>
                            <group>
                                <field name="type" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="reclutamiento__kuale_tools_knowledge_action" model="ir.actions.act_window">
            <field name="name">Tool and knowledge</field>
            <field name="res_model">reclutamiento__kuale.tools_knowledge</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new tool and knowledge
                </p>
            </field>
        </record>
    </data>
</odoo>
