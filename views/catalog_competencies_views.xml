<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reclutamiento_kuale_competencies_view_tree" model="ir.ui.view">
            <field name="model">reclutamiento__kuale.competencies</field>
            <field name="arch" type="xml">
                <tree string="Competence" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="reclutamiento_kuale_competencies_view_form" model="ir.ui.view">
            <field name="model">reclutamiento__kuale.competencies</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="reclutamiento_kuale_competencies_action" model="ir.actions.act_window">
            <field name="name">Competencies</field>
            <field name="res_model">reclutamiento__kuale.competencies</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new competence
                </p>
            </field>
        </record>

    </data>
</odoo>
