<odoo>
    <data>
        <record id="reclutamiento_kuale_imssRegistration_tree_view" model="ir.ui.view">
            <field name="name">reclutamiento__kuale.imss.registration.view.tree</field>
            <field name="model">reclutamiento__kuale.imss.registration</field>
            <field name="arch" type="xml">
                <tree string="Employer Registration (IMSS)">
                    <field name="name" />
                    <field name="city" />
                    <field name="state" />
                    <field name="zip_code" />
                    <field name="job" />
                    <field name="risk_class" />
                    <field name="risk_fraction" />
                    <field name="status" />
                </tree>
            </field>
        </record>
        <record id="reclutamiento_kuale_imssRegistration_form_view" model="ir.ui.view">
            <field name="name">reclutamiento__kuale.imss.registration.view.form</field>
            <field name="model">reclutamiento__kuale.imss.registration</field>
            <field name="arch" type="xml">
                <form string="Employer Registration (IMSS)">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="city" />
                                <field name="state" />
                                <field name="zip_code" />
                                <field name="job" />
                                <field name="risk_class" />
                                <field name="risk_fraction" />
                                <field name="status" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="reclutamiento__kuale_imssRegistration_action" model="ir.actions.act_window">
            <field name="name">Employer Registration</field>
            <field name="res_model">reclutamiento__kuale.imss.registration</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Employer Registration (IMSS)
                </p>
            </field>
        </record>
    </data>
</odoo>