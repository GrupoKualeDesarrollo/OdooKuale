<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reclutamiento_kuale_ext_rel_view_tree" model="ir.ui.view">
            <field name="model">reclutamiento__kuale.external_relations</field>
            <field name="arch" type="xml">
                <tree string="External Relation" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="reclutamiento_kuale_ext_rel_view_form" model="ir.ui.view">
            <field name="model">reclutamiento__kuale.external_relations</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="reclutamiento_kuale_ext_rel_action" model="ir.actions.act_window">
            <field name="name">External Relations</field>
            <field name="res_model">reclutamiento__kuale.external_relations</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new external relation
                </p>
            </field>
        </record>
    </data>
</odoo>
